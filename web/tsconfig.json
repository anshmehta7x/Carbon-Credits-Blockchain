{
  "compilerOptions": {
    "target": "ESNext", // Target latest ECMAScript version
    "lib": ["DOM", "DOM.Iterable", "ESNext"], // Include standard library declarations
    "allowJs": true, // Allow JavaScript files to be compiled
    "checkJs": false, // Do not report errors in JavaScript files
    "skipLibCheck": true, // Skip type checking of declaration files
    "esModuleInterop": true, // Enable interoperability between CommonJS and ES Modules
    "allowSyntheticDefaultImports": true, // Allow default imports from modules with no default export
    "strict": false, // Disable all strict type-checking options
    "noImplicitAny": false, // Disable noImplicitAny
    "strictNullChecks": false, // Disable strict null checks
    "strictFunctionTypes": false, // Disable strict function types
    "strictBindCallApply": false, // Disable strict bind, call, and apply
    "strictPropertyInitialization": false, // Disable strict property initialization
    "noImplicitThis": false, // Disable noImplicitThis
    "alwaysStrict": false, // Disable alwaysStrict
    "forceConsistentCasingInFileNames": true, // Enforce consistent casing in file names
    "module": "ESNext", // Use the latest ECMAScript module system
    "moduleResolution": "Node", // Use Node.js-style module resolution
    "resolveJsonModule": true, // Enable importing JSON files
    "isolatedModules": true, // Ensure TypeScript treats each file as a separate module
    "noEmit": true, // Do not emit output files
    "jsx": "react-jsx", // Use the new JSX transform
    "types": ["unplugin-icons/types/react"], // Include specific type definitions
    "baseUrl": ".", // Base directory for non-relative module names
    "paths": {
      "@/*": ["./src/*"] // Path mapping for module resolution
    }
  },
  "include": ["src"], // Include the src directory
  "references": [{ "path": "./tsconfig.node.json" }] // Project references
}
